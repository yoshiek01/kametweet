<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容でツイートする</h3>
    <%= form_for(@tweet) do |f| %>

      <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
      <%= f.hidden_field :name %>
      <%= f.hidden_field :content %>

      <!-- @blog.titleと@blog.contentとすることで、表示用の値を画面に出力しています。 -->
      <p>名前:<%= @tweet.name %></p>
      <p>本文:<%= @tweet.content %></p>
      <%= f.submit "ツイートする",class: 'btn btn-primary btn-block' %>
      <!-- btn-primaryとは？-->
    <% end %>

    <%= form_for(@tweet, url: root_path, method: 'get') do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :content %>
      <%= f.submit "戻る", name: 'back',class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>