<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <p><%= notice %></p>
    <h2>お問合せ画面</h2>

    <%= form_for(@contact) do |f| %>
      <% if @contact.errors.any? %>
      <div id="error_explanation">
      <!-- バリデーションエラーの件数を表示します -->
        <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

        <ul>
        <!-- # @contact.errorsは@contactをバリデーションした際のエラー情報です.
         full_messagesは複数のエラーメッセージを表します。 -->
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <br>
    <%= f.label :content%>
    <%= f.text_field :content, class: 'form-control' %>
    <br>
    <%= f.submit'投稿',class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>